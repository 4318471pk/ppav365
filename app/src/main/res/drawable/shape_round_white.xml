<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <!--            <solid android:color="#12331f48"/>-->
            <gradient
                android:endColor="#F5F1F8"
                android:startColor="#12331f48"
                android:gradientRadius="700dip"
                android:type="radial" />
        </shape>
    </item>

    <item
        android:bottom="2dip"
        android:left="2dip">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <!-- corners 设置边框四角弧度 -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>


