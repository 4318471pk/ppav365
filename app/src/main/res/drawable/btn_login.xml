<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="#CCEB4A81"/>
            <corners android:radius="25dp"/>
            <padding
                android:left="20dp"
                android:top="4dp"
                android:right="20dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <solid android:color="#80EB4A81"/>
            <corners android:radius="25dp"/>
            <padding
                android:left="20dp"
                android:top="4dp"
                android:right="20dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#EB4A81"/>
            <corners android:radius="25dp"/>
            <padding
                android:left="20dp"
                android:top="4dp"
                android:right="20dp"
                android:bottom="4dp"/>
        </shape>
    </item>

</selector>
