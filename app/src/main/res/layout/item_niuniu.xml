<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/mView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    app:rv_backgroundColor="@color/colorF42C2C"
    app:rv_strokeWidth="1dp"
    app:rv_strokeColor="@color/colorFFEA00"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/colorFFEA00"
            android:text="★"/>

        <TextView
            android:id="@+id/tvNiuNiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/colorFFEA00"
            android:text="牛牛"/>

        <TextView
            android:id="@+id/tvStar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/colorFFEA00"
            android:text="★"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tvCard1"
            android:layout_width="18.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:src="@mipmap/spade2"/>
        <ImageView
            android:id="@+id/tvCard2"
            android:layout_width="18.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:src="@mipmap/spade3"/>

        <ImageView
            android:id="@+id/tvCard3"
            android:layout_width="18.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:src="@mipmap/spade4"/>
        <ImageView
            android:id="@+id/tvCard4"
            android:layout_width="18.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:src="@mipmap/spade5"/>
        <ImageView
            android:id="@+id/tvCard5"
            android:layout_width="18.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:src="@mipmap/spade6"/>




    </LinearLayout>


</com.flyco.roundview.RoundLinearLayout>