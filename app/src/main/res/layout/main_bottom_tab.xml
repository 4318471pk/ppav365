<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <View
        android:id="@+id/main_tab_bg"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/main_tab_middle_bg"
        android:layout_width="56dp"
        android:layout_height="26dp"
        android:background="@drawable/main_tab_bump_bg"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/main_tab_bg"
        app:layout_constraintEnd_toEndOf="@id/main_tab_bg"
        app:layout_constraintStart_toStartOf="@id/main_tab_bg"
        app:layout_constraintTop_toTopOf="@id/main_tab_bg" />

    <ImageView
        android:id="@+id/layout_openlive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/app_name"
        android:elevation="8dp"
        android:src="@drawable/main_bottom_openlive"
        app:layout_constraintLeft_toRightOf="@id/main_tab_middle_bg"
        app:layout_constraintRight_toLeftOf="@id/main_tab_middle_bg"
        app:layout_constraintTop_toTopOf="@id/main_tab_middle_bg" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/main_tab_anchor_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="layout_openlive,
        main_tab_middle_bg" />

    <RadioGroup
        android:id="@+id/main_tab_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.live.fox.view.RadioButtonWithAnim
            android:id="@+id/main_rb_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_home"
            android:gravity="center"
            android:text="@string/home_bottom_tab_home"
            android:textColor="@drawable/main_bottomtab_textcolor_sel"
            android:textSize="12sp" />

        <com.live.fox.view.RadioButtonWithAnim
            android:id="@+id/main_rb_live_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_circle"
            android:gravity="center"
            android:text="@string/main_tab_video"
            android:textColor="@drawable/main_bottomtab_textcolor_sel"
            android:textSize="12sp" />

        <com.live.fox.view.RadioButtonWithAnim
            android:id="@+id/main_rb_empty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:clickable="false"
            android:gravity="center"
            android:textSize="12sp" />

        <com.live.fox.view.RadioButtonWithAnim
            android:id="@+id/main_rb_game"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_play"
            android:gravity="center"
            android:text="@string/home_bottom_tab_game"
            android:textColor="@drawable/main_bottomtab_textcolor_sel"
            android:textSize="12sp" />

        <com.live.fox.view.RadioButtonWithAnim
            android:id="@+id/main_rb_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_mine"
            android:gravity="center"
            android:text="@string/home_bottom_tab_mine"
            android:textColor="@drawable/main_bottomtab_textcolor_sel"
            android:textSize="12sp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
