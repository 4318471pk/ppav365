<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="170dp">

    <ImageView
        android:id="@+id/iv_bigluckbg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/luck_circularbg"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/luck_bg" />

        <LinearLayout
            android:id="@+id/ll_luck"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_luck1"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/luck_3" />

            <ImageView
                android:id="@+id/iv_luck2"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/luck_5" />

            <ImageView
                android:id="@+id/iv_luck3"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/luck_2" />

            <ImageView
                android:id="@+id/iv_luck4"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/luck_0" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:paddingBottom="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/luck_bei" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>


