<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.live.fox.view.SelfTouchControlView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F1F8"
        >
    <com.live.fox.view.convenientbanner.ConvenientBanner
        android:id="@+id/home_convenient_banner"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ffffffff"
        app:canLoop="true" />
    </com.live.fox.view.SelfTouchControlView>

    <LinearLayout
        android:id="@+id/llHot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="22dip">

            <ImageView
                android:id="@+id/ivHomeHot"
                android:layout_width="wrap_content"
                android:layout_height="22dip"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_home_hot" />

            <com.marquee.dingrui.marqueeviewlib.MarqueeView
                android:id="@+id/ivHomeHotRecommendRolling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivHomeHot"
                android:textColor="#646464"
                android:textSize="11sp"
                android:textStyle="bold"
                app:marqueeview_is_resetLocation="false"
                app:marqueeview_isclickalbe_stop="true"
                app:marqueeview_repet_type="repet_interval"
                app:marqueeview_text_color="#646464"
                app:marqueeview_text_size="11"
                app:marqueeview_text_speed="1"
                app:marqueeview_text_startlocationdistance="0.5" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hsHotRecommendList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="22dip">

            <ImageView
                android:id="@+id/ivHomePlayGame"
                android:layout_width="wrap_content"
                android:layout_height="22dip"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_home_playgame" />

            <com.marquee.dingrui.marqueeviewlib.MarqueeView
                android:id="@+id/ivHomePlayGameRolling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivHomePlayGame"
                android:textColor="#646464"
                android:textSize="11sp"
                android:textStyle="bold"
                app:marqueeview_is_resetLocation="false"
                app:marqueeview_isclickalbe_stop="true"
                app:marqueeview_repet_type="repet_interval"
                app:marqueeview_text_color="#646464"
                app:marqueeview_text_size="11"
                app:marqueeview_text_speed="1"
                app:marqueeview_text_startlocationdistance="0.5" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hsPlayGameList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            />
    </LinearLayout>


</LinearLayout>