<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/head_include" />

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:layout_weight="2"
            android:background="@drawable/shape_gradual_orange_light_corners_20"
            android:gravity="center"
            android:text="@string/transaction_income_all"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ydz"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:background="@drawable/shape_gradual_orange_light_corners_20"
            android:gravity="center"
            android:text="@string/tab_change_success"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_inreview"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_weight="4"
            android:background="@drawable/shape_gradual_orange_light_corners_20"
            android:gravity="center"
            android:text="@string/tab_change_reviewing"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bh"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="2"
            android:background="@drawable/shape_gradual_orange_light_corners_20"
            android:gravity="center"
            android:text="@string/refuse"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <include layout="@layout/layout_recycle_view_with_refresh" />

</LinearLayout>
