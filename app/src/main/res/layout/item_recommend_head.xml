<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/item_recommend_head_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/names"
        android:src="@drawable/ic_tuijian_like"
        app:layout_constraintBottom_toBottomOf="@id/item_recommend_head_title"
        app:layout_constraintEnd_toStartOf="@id/item_recommend_head_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_recommend_head_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_recommend_head_title"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center|bottom"
        android:text="@string/live_commend_title"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_recommend_head_like"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>