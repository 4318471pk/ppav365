<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rank_top_3_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_rank_top_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_white_round_10"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/item_rank_top_3_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_rank_top_avatar" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_rank_top_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/names"
        android:elevation="4dp"
        android:src="@drawable/ic_agent_wechat"
        app:layout_constraintBottom_toBottomOf="@id/item_rank_top_avatar_decoration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_rank_top_avatar_decoration"
        app:riv_oval="true" />

    <ImageView
        android:id="@+id/item_rank_top_avatar_decoration"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_champion"
        android:contentDescription="@string/names"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/item_rank_top_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_rank_top_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:textColor="@color/black_ff2"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/item_rank_top_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/backFirst" />

    <TextView
        android:id="@+id/item_rank_top_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradual_blue_light_corners_20"
        android:drawablePadding="6dp"
        android:elevation="4dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/item_coin_title"
        app:layout_constraintEnd_toStartOf="@id/item_rank_top_level"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/backFirst" />

    <ImageView
        android:id="@+id/item_rank_top_level"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:background="@drawable/level_104"
        android:contentDescription="@string/rank_coins"
        android:elevation="4dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_rank_top_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_rank_top_gender"
        app:layout_constraintTop_toTopOf="@id/item_rank_top_gender"
        tools:text="@string/backFirst" />

    <TextView
        android:id="@+id/item_coin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:elevation="4dp"
        android:text="@string/rank_coins"
        android:textColor="@color/gray_ff8"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/item_coin_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_coin_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:elevation="4dp"
        android:textColor="@color/orange_fe4"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/item_rank_top_3_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="8000" />

    <View
        android:id="@+id/item_rank_top_3_bottom"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>