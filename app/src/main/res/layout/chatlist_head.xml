<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/sysnotication" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/iv_"
            android:paddingLeft="12dp"
            android:text="@string/systemNotification"
            android:textColor="#2C2C2C"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_"
            android:layout_alignLeft="@id/tv_title"
            android:layout_toLeftOf="@+id/tv_time_sys"
            android:layout_marginBottom="2dp"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_time_sys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_des"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:singleLine="true"
            android:textColor="#818181"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
