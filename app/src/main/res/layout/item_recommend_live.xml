<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/recommend_live_cover"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/names"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="8dp" />

    <TextView
        android:id="@+id/recommend_live_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient_black_tran"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingVertical="4dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/recommend_live_cover"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/recommend_live_cover"
        tools:text="fasdfad" />

    <TextView
        android:id="@+id/recommend_live_audience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_watcher"
        android:drawablePadding="4dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/recommend_live_cover"
        app:layout_constraintTop_toTopOf="@id/recommend_live_cover"
        tools:text="fas" />

</androidx.constraintlayout.widget.ConstraintLayout>