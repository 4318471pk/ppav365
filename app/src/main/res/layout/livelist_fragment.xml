<?xml version="1.0" encoding="utf-8"?>
<com.live.fox.view.DropDownScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dip"
        android:background="#ffffff"
        >
        <LinearLayout
            android:id="@+id/collapseView"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/gamesHS"
                android:layout_width="match_parent"
                android:layout_height="55dip" />

            <RelativeLayout
                android:id="@+id/layout_gonggao"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dip"
                android:background="#EECCFF"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/ivBroadcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/broadcast"
                    android:layout_centerVertical="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <com.marquee.dingrui.marqueeviewlib.MarqueeView
                    android:id="@+id/tv_gonggao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/ivBroadcast"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:textColor="#A800FF"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:marqueeview_is_resetLocation="false"
                    app:marqueeview_isclickalbe_stop="true"
                    app:marqueeview_repet_type="repet_interval"
                    app:marqueeview_text_color="#A800FF"
                    app:marqueeview_text_size="13"
                    app:marqueeview_text_speed="1"
                    app:marqueeview_text_startlocationdistance="0.5" />



            </RelativeLayout>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/hostTypeTabs"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:background="#ffffff"
            android:visibility="invisible"
            app:tabPaddingStart="0dip"
            app:tabPaddingEnd="0dip"
            android:layout_alignParentBottom="true"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
             />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/home_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_live_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingHorizontal="4dp"
         />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <ScrollView
        android:id="@+id/svMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/home_convenient_banner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:canLoop="true" />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_game"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never"
                            android:paddingHorizontal="4dp" />
                        <LinearLayout
                            android:id="@+id/layout_gamelist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layout_game_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="10dp">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="12dp">

                                        <TextView
                                            android:id="@+id/tv_gametitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            tools:text="@string/places_holder" />

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="3dp"
                                            android:layout_below="@+id/tv_gametitle"
                                            android:layout_alignEnd="@+id/tv_gametitle"
                                            android:layout_marginTop="3dp"
                                            android:background="@color/colorAccent" />

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/tv_gamemore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:drawablePadding="8dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/more"
                                        android:textSize="12sp"
                                        app:drawableEndCompat="@drawable/ic_arrow_rights" />

                                </LinearLayout>



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_liverecomment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="12dp">

                                    <TextView
                                        android:id="@+id/tv_title_recomment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:drawablePadding="8dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/rocketRecommendation"
                                        android:textColor="#F45479"
                                        android:textSize="15sp"
                                        app:drawableStartCompat="@drawable/liverecomment_ic" />

                                    <TextView
                                        android:id="@+id/tv_des_recomment"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ellipsize="marquee"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:gravity="center_vertical"
                                        android:marqueeRepeatLimit="marquee_forever"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="10dp"
                                        android:scrollHorizontally="true"
                                        android:singleLine="true"
                                        android:textColor="#858585"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_liverecomment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:overScrollMode="never"
                                    android:paddingHorizontal="4dp" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingHorizontal="12dp">

                                <TextView
                                    android:id="@+id/tv_zhibo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="center_vertical"
                                    android:text="@string/main_tab_video"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="3dp"
                                    android:layout_below="@id/tv_zhibo"
                                    android:layout_alignEnd="@+id/tv_zhibo"
                                    android:layout_marginTop="6dp"
                                    android:background="@color/colorAccent" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


        </LinearLayout>
    </ScrollView>



</com.live.fox.view.DropDownScrollView>
