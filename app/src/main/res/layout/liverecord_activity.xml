<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F7"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_gradual_orange_light_corners_bottom_20"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dilaog_value_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_daynum"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="3.0dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="#FFFFFFFF"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/effectiveDay"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_timenum"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="3.0dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="0"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/effectiveTime"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_getmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="3.0dip"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="#FFFFFFFF"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/revenueLivet"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="@string/dangwei"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/weekDetail"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/balanceTitle_recharge"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="5dp"
        android:background="#242A37"
        android:gravity="center_vertical"
        android:paddingBottom="2.5dp"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
        android:paddingTop="2.5dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/weekLiveDetail"
            android:textColor="#6A6A6A"
            android:textSize="16sp" />

        <com.flyco.roundview.RoundTextView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_alignLeft="@id/tv_temp1"
            android:layout_alignRight="@id/tv_temp1"
            android:layout_below="@id/tv_temp1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            app:rv_backgroundColor="#EC6B9D"
            app:rv_cornerRadius="2dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_card_container2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_card_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_card_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/kaiboTime"
                android:textColor="#6A6A6A"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="19dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:id="@+id/ll_card_letter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/kaiboLong"
                android:textColor="#6A6A6A"
                android:textSize="13dp" />
        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:dividerHeight="0.5dp" />

    <ImageView
        android:id="@+id/searchEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="71.5dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/empty_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/billYet"
        android:textColor="#C8C8C8"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>