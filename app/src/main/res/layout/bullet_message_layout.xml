<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dip"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:textColor="#85EFFF"
            android:textSize="13sp" />

        <com.live.fox.view.GradientTextView
            android:id="@+id/tvBulletMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="70dip"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:paddingLeft="15dip"
            android:paddingRight="5dip"
            android:text="弹幕!"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            app:gt_radius_dp="9dp"
            app:gt_solidNoGradient="#66000000" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="40dip"
        android:layout_height="40dip">

        <com.live.fox.view.Top20CircleImage
            android:id="@+id/ivUserImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_head_error"
            />

        <ImageView
            android:id="@+id/ivEdge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          />

        <ImageView
            android:id="@+id/ivTag1"
            android:layout_width="14dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/ivTag2"
            android:layout_width="14dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

</RelativeLayout>