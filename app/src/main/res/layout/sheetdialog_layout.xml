<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sky_action_dialog_layout_cancel"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sky_action_dialog_layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12sp">

                <TextView
                    android:id="@+id/sky_action_dialog_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#ff8b8b8b"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="VALUE" />

                <TextView
                    android:id="@+id/sky_action_dialog_text_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:layout_marginBottom="12sp"
                    android:gravity="center_horizontal"
                    android:textColor="#ff8b8b8b"
                    android:textSize="13sp"
                    tools:text="VALUE" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffe2e2e2" />
        </LinearLayout>

        <ListView
            android:id="@+id/sky_action_dialog_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#ffe2e2e2"
            android:dividerHeight="1px"
            android:listSelector="@color/list_item_bg_focused"
            android:scrollbars="none"
            android:background="@drawable/shape_round_white"/>
    </LinearLayout>
    <!--    </FrameLayout>-->

    <!--    <FrameLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="60dp"-->
    <!--        android:layout_marginTop="8dp"-->
    <!--        android:background="@drawable/shape_round_white">-->

    <RelativeLayout
        android:id="@+id/sky_action_dialog_layout_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sel_list_item_bg"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <TextView
            android:id="@+id/sky_action_dialog_text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/cancel"
            android:textColor="#ff007aff"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!--    </FrameLayout>-->
</RelativeLayout>
