                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivCz2"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10dp"
                        android:onClick="@{click.onClickView}"
