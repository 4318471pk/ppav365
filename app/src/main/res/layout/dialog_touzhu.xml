                        app:riv_oval="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/qi_end_2"
                            android:textColor="@color/white"
                            android:textSize="13sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="00:11"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTz2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_lottery_record"
                            android:gravity="center"
                            android:onClick="@{click.onClickView}"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/betting_history"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvKj2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/bg_lottery_record"
                            android:gravity="center"
                            android:onClick="@{click.onClickView}"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/prize_opening_history"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvMoreKj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:onClick="@{click.onClickView}"
                            android:text="@string/more_kj"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvMoreKj2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/bg_lottery_type_2"
                            android:gravity="center"
                            android:onClick="@{click.onClickView}"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/more_kj"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ivWen"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@mipmap/wen"
                            android:visibility="gone"

                            />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCzPlay"
                    android:layout_width="match_parent"
                    android:layout_height="325dp"
                    android:background="@color/color000000"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/tvCzPlayName"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="一分快三·玩法说明"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#80ffffff" />

                    <TextView
                        android:id="@+id/tvCzPlayDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="“一分快三”为引进欧洲博彩公司开彩设备后，经由菲律宾 博彩执照公司审核监控、联合开发的彩票游戏。该游戏全天24 小时开彩，每分钟一期，全天1440期。"
                        android:textColor="@color/colorB8B2C8"

                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCzStatus"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="12dp"
                    android:background="#69646F"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCzName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="@{click.onClickView}"
                            android:text="一分快三"
                            android:textColor="@color/colorFEFEFF"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/ivCzNameBot"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:onClick="@{click.onClickView}"
                            android:padding="6dp"
                            android:src="@mipmap/arrow_bot" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="@{click.onClickView}"
                            android:text="@string/all_zt"
                            android:textColor="@color/colorFEFEFF"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/ivStatus"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:onClick="@{click.onClickView}"
                            android:padding="6dp"
                            android:src="@mipmap/arrow_bot" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTimeSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:onClick="@{click.onClickView}"
                            android:text="11月9日"
                            android:textColor="@color/colorFEFEFF"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/ivTimeSelect"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:onClick="@{click.onClickView}"
                            android:padding="6dp"
                            android:src="@mipmap/arrow_bot" />

                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/layoutRecord"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="4dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcRecord"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/layoutTzEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@mipmap/ic_launcher"
                            app:riv_oval="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="@string/no_record"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/layoutTzZj"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="#b3ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/betting"
                            android:textColor="@color/colorFEFEFF"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/zj"
                            android:textColor="@color/colorFEFEFF"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/yl"
                            android:textColor="@color/colorFEFEFF"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
