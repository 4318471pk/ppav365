<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    app:rv_backgroundColor="@color/dialog_transparent_bg"
    app:rv_cornerRadius_TL="10dp"
    app:rv_cornerRadius_TR="10dp">

    <RelativeLayout
        android:id="@+id/layout_roomtype1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <RadioGroup
            android:id="@+id/rg_roomtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_type1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/roomtype1_sel"
                android:gravity="center"
                android:text="@string/ordinaryRoom"
                android:textColor="@drawable/theme_rb_txtcolor"
                android:textSize="@dimen/sp_12" />

            <RadioButton
                android:id="@+id/rb_type2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/roomtype2_sel"
                android:gravity="center"
                android:text="@string/timeRoomt"
                android:textColor="@drawable/theme_rb_txtcolor"
                android:textSize="@dimen/sp_12" />


            <RadioButton
                android:id="@+id/rb_type3"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/roomtype3_sel"
                android:gravity="center"
                android:text="@string/onceRoomt"
                android:textColor="@drawable/theme_rb_txtcolor"
                android:textSize="@dimen/sp_12" />

            <RadioButton
                android:id="@+id/rb_type4"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/roomtype4_sel"
                android:gravity="center"
                android:text="@string/passwordRoomt"
                android:textColor="@drawable/theme_rb_txtcolor"
                android:textSize="@dimen/sp_12" />
        </RadioGroup>
    </RelativeLayout>

</com.flyco.roundview.RoundLinearLayout>
