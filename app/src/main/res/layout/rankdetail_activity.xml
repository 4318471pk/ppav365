<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <RelativeLayout
                android:id="@+id/fl_rank2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="32dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_rank2"
                    android:layout_width="56dp"
                    android:layout_height="66dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="21dp"
                    android:paddingBottom="12dp"
                    android:scaleType="centerCrop"
                    app:riv_oval="true" />

                <ImageView
                    android:id="@+id/iv_rank2_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/rank2_none" />

                <ImageView
                    android:id="@+id/iv_zbz2"
                    android:layout_width="34dp"
                    android:layout_height="23dp"
                    android:layout_alignBottom="@+id/iv_rank2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_white_corner1"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    android:src="@drawable/zhibozhonga" />

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_rank2_bg"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/tv_rank2_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#2A2E3F"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rank2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="3458906"
                        android:textColor="#2A2E3F"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rank2_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#7A7A7A"
                        android:textSize="11sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fl_rank1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="10dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_rank1"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="27dp"
                    android:paddingBottom="12dp"
                    android:scaleType="centerCrop"
                    app:riv_oval="true" />

                <ImageView
                    android:id="@+id/iv_rank1_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/rank1_none" />

                <ImageView
                    android:id="@+id/iv_zbz1"
                    android:layout_width="36dp"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/iv_rank1"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_white_corner1"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone"
                    android:src="@drawable/zhibozhonga" />

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_rank1_bg"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/tv_rank1_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#2A2E3F"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rank1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="3458906"
                        android:textColor="#2A2E3F"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rank1_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#7A7A7A"
                        android:textSize="11sp" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fl_rank3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="32dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_rank3"
                    android:layout_width="56dp"
                    android:layout_height="66dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="21dp"
                    android:paddingBottom="12dp"
                    android:scaleType="centerCrop"
                    app:riv_oval="true" />

                <ImageView
                    android:id="@+id/iv_rank3_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/rank3_none" />

                <ImageView
                    android:id="@+id/iv_zbz3"
                    android:layout_width="34dp"
                    android:layout_height="23dp"
                    android:layout_alignBottom="@+id/iv_rank3"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_white_corner1"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    android:src="@drawable/zhibozhonga" />

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/iv_rank3_bg"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/tv_rank3_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#2A2E3F"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rank3_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="3458906"
                        android:textColor="#2A2E3F"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rank3_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#7A7A7A"
                        android:textSize="11sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bottomrank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp">

        <com.flyco.roundview.RoundTextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:rv_backgroundColor="#E0986F"
            app:rv_isRadiusHalfHeight="true" />

        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:rv_backgroundColor="@color/white"
            app:rv_cornerRadius_BL="8dp"
            app:rv_cornerRadius_BR="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:text="@string/rankName"
                    android:textColor="#DEB197"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="6"
                    android:text="@string/userName"
                    android:textColor="#DEB197"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_valuetitle3"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:text="@string/gongxianzhi"
                    android:textColor="#DEB197"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <include layout="@layout/include_recycle_view_with_refresh" />

        </com.flyco.roundview.RoundLinearLayout>

    </RelativeLayout>
</LinearLayout>