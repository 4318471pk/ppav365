<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/web_dialog_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/theme_shape"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/web_dialog_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/close"
        android:padding="8dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/web_dialog_title"
        app:layout_constraintEnd_toEndOf="@id/web_dialog_title"
        app:layout_constraintTop_toTopOf="@id/web_dialog_title" />

    <WebView
        android:id="@+id/web_dialog_web_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/web_dialog_title" />

</androidx.constraintlayout.widget.ConstraintLayout>