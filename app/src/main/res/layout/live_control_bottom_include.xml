<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom_button"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal">

    <com.flyco.roundview.RoundLinearLayout
        android:id="@+id/layout_chat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:paddingEnd="5dp"
        app:rv_backgroundColor="@color/black_30"
        app:rv_isRadiusHalfHeight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/liveroom_letter_ic" />

        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="@string/charting"
            android:textColor="@color/gary_50"
            android:textSize="12sp" />

    </com.flyco.roundview.RoundLinearLayout>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/liveroom_share_ic"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_kaijiang"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/historyc"
        android:visibility="visible" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/live_play_iv_cp"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/ic_cp" />

    <ImageView
        android:id="@+id/iv_game"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/liveroom_game_ic"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/liveroom_gift_ic" />

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/liveroom_setting_ic" />

    <ImageView
        android:id="@+id/iv_roomclose"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/liveroom_close_ic" />

</LinearLayout>