<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rv_cornerRadius="8dip"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginTop="1dip"
    app:rv_backgroundColor="#ffffffff"
    >

    <TextView
        android:id="@+id/tvFollow"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:text="@string/follow"
        android:gravity="center"
        android:background="@drawable/bg_follow"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        >

        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="20dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#8B8B8B"
            android:layout_gravity="center_vertical"/>

        <com.live.fox.view.RankProfileView
            android:id="@+id/rpv"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dip"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12.5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#404040"
                android:text="--"/>

            <TextView
                android:id="@+id/tvHuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.5dp"
                android:textSize="12sp"
                android:textColor="#8B8B8B"
                android:text="--"/>

        </LinearLayout>




    </LinearLayout>


</com.flyco.roundview.RoundRelativeLayout>