<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fl_rank1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_rank1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="27dp"
            android:paddingBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default"
            android:visibility="invisible"
            app:riv_oval="true" />

        <ImageView
            android:id="@+id/iv_rank1_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rank1_none" />

        <ImageView
            android:id="@+id/iv_zbz1"
            android:layout_width="36dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/iv_rank1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_white_corner1"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:src="@drawable/zhibozhonga" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fl_rank2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/fl_rank1">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_rank2"
            android:layout_width="56dp"
            android:layout_height="66dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="21dp"
            android:paddingBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default"
            android:visibility="invisible"
            app:riv_oval="true" />

        <ImageView
            android:id="@+id/iv_rank2_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rank2_none" />

        <ImageView
            android:id="@+id/iv_zbz2"
            android:layout_width="34dp"
            android:layout_height="23dp"
            android:layout_alignBottom="@+id/iv_rank2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_white_corner1"
            android:paddingLeft="7dp"
            android:paddingTop="4dp"
            android:paddingRight="7dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:src="@drawable/zhibozhonga" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fl_rank3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/fl_rank1">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_rank3"
            android:layout_width="56dp"
            android:layout_height="66dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="21dp"
            android:paddingBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default"
            android:visibility="invisible"
            app:riv_oval="true" />

        <ImageView
            android:id="@+id/iv_rank3_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rank3_none" />

        <ImageView
            android:id="@+id/iv_zbz3"
            android:layout_width="34dp"
            android:layout_height="23dp"
            android:layout_alignBottom="@+id/iv_rank3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_white_corner1"
            android:paddingLeft="7dp"
            android:paddingTop="4dp"
            android:paddingRight="7dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:src="@drawable/zhibozhonga" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="@string/morea"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        android:textStyle="bold" />
</RelativeLayout>