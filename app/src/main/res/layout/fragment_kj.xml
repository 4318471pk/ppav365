<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/game_cart_bg"
    android:orientation="horizontal"
    android:paddingLeft="2dp"
    android:paddingTop="30dp"
    android:paddingRight="2dp"
    android:paddingBottom="40dp">

    <LinearLayout
        android:id="@+id/ll_lisi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_lisi"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/historyc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/prize_opening_history"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mykj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_mykj"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/historymy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/betting_history"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>