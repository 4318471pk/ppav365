<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="190dp"
    android:clipChildren="true">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp" />

    <TextView
        android:id="@+id/tv_cai_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_cover"
        android:layout_alignTop="@id/iv_cover"
        android:background="@drawable/shape_left_top_right_bottom"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="@string/app_name" />

    <ImageView
        android:id="@+id/layout_living"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/password"
        android:gravity="center_vertical"
        android:src="@drawable/ic_live_room_charges"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/layout_pking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/password"
        android:src="@drawable/ic_pk_with_bg"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/descri_layout"
        android:layout_width="fill_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_gradient_black_tran_botm_corn8">

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@+id/tv_num"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_sign"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:text="@string/black" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignBottom="@id/tv_sign"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:drawableStart="@drawable/ren"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_joytd"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_above="@+id/tv_num"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/names"
            android:scaleType="fitCenter"
            android:src="@drawable/joy_td" />
    </RelativeLayout>

</RelativeLayout>