<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gary_50"
    android:orientation="vertical"
    android:overScrollMode="never">

    <LinearLayout style="@style/MatchMatch.Vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/mine_message"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:padding="5dp"
                android:src="@drawable/mymessage" />

            <ImageView
                android:id="@+id/iv_rightdes"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignTop="@id/mine_message"
                android:layout_alignEnd="@id/mine_message"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/shape_red_dot"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout style="@style/MatchWrap.Vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_headimg"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_centerInParent="true"
                    android:elevation="6dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_default"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />

                <ImageView
                    android:id="@+id/iv_geren"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignEnd="@+id/iv_headimg"
                    android:layout_alignBottom="@+id/iv_headimg"
                    android:elevation="6dp"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/mymodify_ic" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/WrapWrap"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_id"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_idnum"
                    style="@style/WrapWrap"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/tv_copyid"
                    style="@style/WrapWrap"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingLeft="4dp"
                    android:paddingTop="1dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="1dp"
                    android:text="@string/copy"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:rv_backgroundColor="@color/colorAccent"
                    app:rv_cornerRadius="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="17dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_circle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_circlenum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/number_zero"
                        android:textColor="#414141"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/dynamic"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_follow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_follownum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/number_zero"
                        android:textColor="#414141"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/focus"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_fans"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fansnum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/number_zero"
                        android:textColor="#414141"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/fan"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_zhanghuan"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bgyjzh"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/balanceMoneyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:text="@string/number_8888"
                    android:textColor="#EACA8D"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/balanceMoneyTipsTv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/balanceMoneyTipsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/user_account_balance"
                    android:textColor="@color/white_70"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/balanceMoneyTv"
                    app:layout_constraintTop_toBottomOf="@id/balanceMoneyTv" />

                <Button
                    android:id="@+id/btn_yjzh"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/shape_corners_20_gold"
                    android:paddingHorizontal="16dp"
                    android:text="@string/recycling"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_profile_middle1"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_white_round_20"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:id="@+id/ll_recharge"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/recharge_ic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        android:text="@string/charge"
                        android:textColor="#414141"
                        android:textSize="13sp" />

                </LinearLayout>

                <View style="@style/AutoMatch" />

                <LinearLayout
                    android:id="@+id/ll_moneyout"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/moneyout_ic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        android:text="@string/tixian"
                        android:textColor="#414141"
                        android:textSize="13sp" />

                </LinearLayout>

                <View style="@style/AutoMatch" />

                <LinearLayout
                    android:id="@+id/ll_shop"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/shop_ic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="@string/buy"
                        android:textColor="#414141"
                        android:textSize="13sp" />

                </LinearLayout>

                <View style="@style/AutoMatch" />

                <LinearLayout
                    android:id="@+id/ll_vip"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/noble_ic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        android:text="@string/noble"
                        android:textColor="#414141"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/share_ic"
                android:visibility="visible" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mine_click_item"
            style="@style/MatchMatch"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>