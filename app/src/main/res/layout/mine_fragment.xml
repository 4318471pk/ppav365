<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="click"
            type="com.live.fox.ui.mine.MineFragment" />
    </data>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.live.fox.view.refreshhead2graycolor.ClassicsHeaderToGrayColor
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:srlAccentColor="@color/gray"
            app:srlClassicsSpinnerStyle="Translate" />

        <androidx.core.widget.NestedScrollView

            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gary_50"
            android:orientation="vertical"
            android:overScrollMode="never">


            <LinearLayout
                style="@style/MatchMatch.Vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="285dp"
                    android:background="@mipmap/user_bg"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/mine_message"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:onClick="@{click.onClickView}"
                                android:padding="7.5dp"
                                android:src="@mipmap/information" />

                            <RelativeLayout
                                android:id="@+id/iv_rightdes"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignTop="@id/mine_message"
                                android:layout_alignEnd="@id/mine_message"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="3dp"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/shape_red_dot" />

                                <TextView
                                    android:id="@+id/tv_unread_msg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:textSize="10dp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/mine_set"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:onClick="@{click.onClickView}"
                            android:layout_marginEnd="12dp"
                            android:padding="7.5dp"
                            android:src="@mipmap/set_up" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginLeft="17dp">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/iv_headimg"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:onClick="@{click.onClickView}"
                                android:layout_centerInParent="true"
                                android:elevation="6dp"
                                android:padding="2dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_default"
                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                                app:strokeColor="@color/white"
                                app:strokeWidth="2dp" />

                            <ImageView
                                android:id="@+id/iv_geren"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:onClick="@{click.onClickView}"
                                android:layout_alignEnd="@id/iv_headimg"
                                android:layout_alignBottom="@id/iv_headimg"
                                android:elevation="6dp"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="0dp"
                                android:src="@drawable/mymodify_ic" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#404040"
                                android:textSize="16dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:gravity="center|start"
                                        android:orientation="horizontal"
                                        >

                                        <TextView
                                            android:id="@+id/tv_sex"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                           />

                                        <ImageView
                                            android:id="@+id/ivLevel"
                                            android:layout_width="35dp"
                                            android:layout_height="14dp"
                                            android:layout_marginStart="5dp"/>

                                        <ImageView
                                            android:id="@+id/ivNoble"
                                            android:layout_width="45dp"
                                            android:layout_height="14dp"
                                            android:layout_marginStart="5dp"/>

                                        <ImageView
                                            android:id="@+id/ivLiang"
                                            android:visibility="gone"
                                            android:layout_width="19dp"
                                            android:layout_height="19dp"
                                            android:src="@mipmap/liang"
                                            android:layout_marginStart="5dp"/>

                                    </LinearLayout>



                                    <LinearLayout
                                        android:id="@+id/layout_id"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_idnum"
                                            style="@style/WrapWrap"
                                            android:layout_gravity="center"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:textColor="#646464"
                                            android:textSize="@dimen/sp_12" />

                                        <com.flyco.roundview.RoundTextView
                                            android:id="@+id/tv_copyid"
                                            style="@style/WrapWrap"
                                            android:onClick="@{click.onClickView}"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="10sp"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:paddingLeft="12dp"
                                            android:paddingTop="3dp"
                                            android:paddingRight="12dp"
                                            android:paddingBottom="3dp"
                                            android:text="@string/copy"
                                            android:textColor="@color/colorA800FF"
                                            android:textSize="14sp"
                                            app:rv_cornerRadius="20dp"
                                            app:rv_strokeColor="@color/colorA800FF"
                                            app:rv_strokeWidth="1dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="8.5dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="20dp"
                                    android:src="@mipmap/icon_right" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_sign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="25dp"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/color646464"
                                android:textSize="12dp" />


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="17dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_circle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:onClick="@{click.onClickView}"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_circlenum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/number_zero"
                                android:textColor="#414141"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="@string/dynamic"
                                android:textColor="#7A7A7A"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layout_follow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:onClick="@{click.onClickView}"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_follownum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/number_zero"
                                android:textColor="@color/colorA800FF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="@string/focus"
                                android:textColor="#ff404040"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_fans"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:onClick="@{click.onClickView}"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_fansnum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/number_zero"
                                android:textColor="@color/colorA800FF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center"
                                android:text="@string/fan"
                                android:textColor="#ff404040"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.flyco.roundview.RoundLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        app:rv_backgroundColor="#DE735591"
                        app:rv_cornerRadius_TL="10dp"
                        app:rv_cornerRadius_TR="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/icon_fund"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <com.flyco.roundview.RoundLinearLayout
                                android:id="@+id/ll_zhanghuan"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:onClick="@{click.onClickView}"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                app:rv_backgroundColor="#40000000"
                                app:rv_cornerRadius="12dp">

                                <ImageView
                                    android:layout_width="9dp"
                                    android:layout_height="9dp"
                                    android:src="@mipmap/money" />

                                <TextView
                                    android:id="@+id/balanceMoneyTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                            </com.flyco.roundview.RoundLinearLayout>

                            <com.flyco.roundview.RoundLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                app:rv_backgroundColor="#40000000"
                                app:rv_cornerRadius="12dp">

                                <ImageView
                                    android:layout_width="9dp"
                                    android:layout_height="9dp"
                                    android:src="@mipmap/diamond" />

                                <TextView
                                    android:id="@+id/diamondTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                            </com.flyco.roundview.RoundLinearLayout>

                        </LinearLayout>

                    </com.flyco.roundview.RoundLinearLayout>


                </LinearLayout>

                <com.flyco.roundview.RoundLinearLayout
                    android:id="@+id/ll_profile_middle1"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    app:rv_backgroundColor="@color/white"
                    app:rv_cornerRadius_BL="10dp"
                    app:rv_cornerRadius_BR="10dp">

                    <LinearLayout
                        android:id="@+id/ll_recharge"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:onClick="@{click.onClickView}"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/recharge_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/charge"
                            android:textColor="@color/color646464"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View style="@style/AutoMatch" />

                    <LinearLayout
                        android:id="@+id/ll_moneyout"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:onClick="@{click.onClickView}"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/moneyout_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/tixian"
                            android:textColor="@color/color646464"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View style="@style/AutoMatch" />

                    <LinearLayout
                        android:id="@+id/ll_diamond"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{click.onClickView}"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@mipmap/redeem_diamonds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/exchange_diamond"
                            android:textColor="@color/color646464"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View style="@style/AutoMatch" />

                    <LinearLayout
                        android:id="@+id/ll_vip"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:onClick="@{click.onClickView}"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@mipmap/nobleman" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/noble_2"
                            android:textColor="@color/color646464"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View style="@style/AutoMatch" />

                    <LinearLayout
                        android:id="@+id/llService"
                        android:onClick="@{click.onClickView}"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@mipmap/customer_service" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/service"
                            android:textColor="@color/color646464"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_shop"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:onClick="@{click.onClickView}"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/shop_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:gravity="center"
                            android:text="@string/buy"
                            android:textColor="#414141"
                            android:textSize="13sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/noble_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="@string/noble"
                            android:textColor="#414141"
                            android:textSize="13sp" />

                    </LinearLayout>
                </com.flyco.roundview.RoundLinearLayout>


                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:onClick="@{click.onClickView}"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/share_ic"
                    android:visibility="gone" />

                <com.live.fox.view.convenientbanner.ConvenientBanner
                    android:visibility="gone"
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:canLoop="true" />

                <com.flyco.roundview.RoundLinearLayout
                    android:id="@+id/centerOfAnchor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:onClick="@{click.onClickView}"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:paddingStart="10dip"
                    android:paddingEnd="20dip"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:rv_backgroundColor="@color/white"
                    app:rv_cornerRadius="10dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/icon_mine_live" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:text="@string/centerOfAnchor"
                        android:textColor="@color/color404040"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_right" />

                </com.flyco.roundview.RoundLinearLayout>


                <com.flyco.roundview.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    app:rv_backgroundColor="@color/white"
                    app:rv_cornerRadius="10dp">

                    <LinearLayout
                        android:id="@+id/llDepositAndWithdraw"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:onClick="@{click.onClickView}"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@mipmap/deposit_withdrawal_records" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:text="@string/recharge_record"
                            android:textColor="@color/color404040"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_right" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color1a331F48" />

                    <LinearLayout
                        android:id="@+id/llDiamondIncomeAndExpense"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:onClick="@{click.onClickView}"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@mipmap/deposit_diamond_records" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:text="@string/diamond_income_expense"
                            android:textColor="@color/color404040"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_right" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color1a331F48" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
