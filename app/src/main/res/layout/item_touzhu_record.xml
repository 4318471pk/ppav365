<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="31dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:textColor="@color/white"
        android:text="1000000000"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/game1"/>

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:src="@mipmap/game2"/>

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:src="@mipmap/game3"/>


    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="55dp"
        android:gravity="center"
        android:text="17"
        android:textSize="12sp"
        android:textColor="@color/colorF42C2C"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="50dp"
        />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="@string/da"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:rv_backgroundColor="@color/color0F86FF"
        app:rv_cornerRadius="50dp"
        />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="@string/da"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:rv_backgroundColor="@color/color0F86FF"
        app:rv_cornerRadius="50dp"
        />




</LinearLayout>