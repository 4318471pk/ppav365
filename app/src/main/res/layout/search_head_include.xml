<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_searchhead"
        android:layout_height="50dp"
        android:background="#fafafa"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_searchhead_back"
            style="@style/WrapMatch"
            android:background="@drawable/btn_press_sel"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/head_back_sel" />

        <EditText
            android:id="@+id/et_searchhead"
            style="@style/AutoMatch"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/head_search_et_bg"
            android:drawableLeft="@drawable/head_search"
            android:drawablePadding="5dp"
            android:hint="@string/pInputUsename"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_searchhead_search"
            style="@style/WrapMatch"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/search"
            android:textColor="@color/red"
            android:textSize="16sp" />

    </LinearLayout>

    <include layout="@layout/line_include" />

</LinearLayout>