<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="10dp"
        >

    <TextView
            android:id="@+id/tv_eyes_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="瞳孔样式" />

    <ImageView
            android:id="@+id/image_eye_0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image_eye_1"
            app:layout_constraintTop_toBottomOf="@id/tv_eyes_style"
            android:layout_marginTop="10dp"
            android:src="@mipmap/eye_blue" />

    <ImageView
            android:id="@+id/image_eye_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@id/image_eye_0"
            app:layout_constraintTop_toTopOf="@id/image_eye_0"
            app:layout_constraintRight_toLeftOf="@id/image_eye_2"
            android:src="@mipmap/eye_green" />

    <ImageView
            android:id="@+id/image_eye_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toRightOf="@id/image_eye_1"
            app:layout_constraintTop_toTopOf="@id/image_eye_0"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/eye_brown" />



</androidx.constraintlayout.widget.ConstraintLayout>