<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="款式"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
                android:id="@+id/item_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/item_1"
                app:layout_constraintTop_toBottomOf="@id/textview"
                android:layout_marginTop="10dp"
                android:src="@mipmap/naught" />

        <ImageView
                android:id="@+id/item_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toRightOf="@id/item_0"
                app:layout_constraintRight_toLeftOf="@id/item_2"
                app:layout_constraintTop_toTopOf="@id/item_0"
                android:src="@mipmap/glasses_52" />

        <ImageView
                android:id="@+id/item_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toRightOf="@id/item_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_0"
                android:src="@mipmap/glasses_71" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>