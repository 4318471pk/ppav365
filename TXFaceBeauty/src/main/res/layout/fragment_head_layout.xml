<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:fadingEdgeLength="30dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/textview0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="皮肤"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/layout_flow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:flow_horizontalGap="40dp"
                app:flow_verticalGap="10dp"
                app:flow_wrapMode="chain"
                app:layout_constraintTop_toBottomOf="@id/textview0"
                app:constraint_referenced_ids="color_0,color_1,color_2,color_3,color_4,color_5,color_6,color_7,color_8,color_9" />


        <ImageView
                android:id="@+id/color_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/face_color_0" />

        <ImageView
                android:id="@+id/color_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_1" />

        <ImageView
                android:id="@+id/color_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_2" />

        <ImageView
                android:id="@+id/color_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_2" />

        <ImageView
                android:id="@+id/color_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_2" />
        <ImageView
                android:id="@+id/color_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_2" />
        <ImageView
                android:id="@+id/color_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_2" />
        <ImageView
                android:id="@+id/color_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_2" />
        <ImageView
                android:id="@+id/color_8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_2" />

        <ImageView
                android:id="@+id/color_9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/face_color_2" />

        <LinearLayout
                android:id="@+id/layout_shapes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_flow"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>